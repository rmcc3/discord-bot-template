{
  "compilerOptions": {
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "target": "es2016",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@types/*": ["src/@types/*"],
      "@utils/*": ["src/utils/*"],
      "@database": ["src/database"]
    }
  },
  "include": [
    "src/**/*",
    "extensions/**/*"
  ]
}